pipeline {
    agent {
        docker {
            image 'markhobson/maven-chrome'
            args '-v $HOME/.m2:/root/.m2'
        }
    }

    environment {
        DEPLOY_USER = 'ubuntu'
        DEPLOY_HOST = 'ec2-51-20-182-249.eu-north-1.compute.amazonaws.com'
        DEPLOY_DIR  = '/home/ubuntu/InventoryAutomation'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/TayyabaHussain58/InventoryApp-.git'
            }
        }

        stage('Run Selenium Tests') {
            steps {
                dir('InventoryApp') {
                    sh 'mvn test'
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent(credentials: ['ec2-ssh']) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no $DEPLOY_USER@$DEPLOY_HOST <<EOF
                        cd $DEPLOY_DIR
                        git pull origin main

                        cd InventoryApp/server
                        npm install
                        pm2 restart backend || pm2 start index.js --name backend

                        cd ../Inventory
                        npm install
                        npm run build
                        pm2 serve dist 3000 --name inventory --spa
                        EOF
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline Execution Finished'
        }
    }
}
